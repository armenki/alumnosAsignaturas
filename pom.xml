<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.bootcamp.alumnosAsignaturas</groupId>
  <artifactId>alumnosAsignaturas</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  <dependencies>
    <!-- Dependencia de JUnit 4 para pruebas unitarias -->
    <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.13.2</version>
        <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.mockito</groupId>
    	<artifactId>mockito-core</artifactId>
    	<version>5.4.0</version> <!-- Usa la última versión -->
    	<scope>test</scope>
</dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.22.2</version> <!-- Plugin necesario para ejecutar las pruebas -->
      </plugin>
    </plugins>
  </build>
</project>
